{
  "manifest_version": 3,
  "name": "Universal Dark Mode Toggle",
  "version": "1.0",
  "description": "Forces dark mode on all websites with optional customization and scheduling.",
  "permissions": ["scripting", "activeTab", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}